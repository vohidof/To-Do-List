<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".AddToDoActivity">

    <EditText
        android:id="@+id/edt_ToDoName"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_margin="20dp"
        android:background="@drawable/edt_background"
        android:hint="@string/to_do_name"
        android:padding="20dp" />

    <EditText
        android:id="@+id/edt_ToDoDescription"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_marginHorizontal="20dp"
        android:layout_marginBottom="20dp"
        android:background="@drawable/edt_background"
        android:hint="@string/to_do_name"
        android:padding="20dp" />

    <Spinner
        android:id="@+id/spinner"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_marginHorizontal="20dp"
        android:layout_marginBottom="20dp"
        android:background="@drawable/edt_background"
        android:hint="@string/to_do_name"
        android:padding="10dp" />

    <EditText
        android:id="@+id/edt_ToDoData"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_marginHorizontal="20dp"
        android:layout_marginBottom="20dp"
        android:background="@drawable/edt_background"
        android:hint="@string/to_do_create_date"
        android:padding="20dp" />

    <EditText
        android:id="@+id/edt_ToDoDeadline"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_marginHorizontal="20dp"
        android:layout_marginBottom="20dp"
        android:background="@drawable/edt_background"
        android:hint="@string/to_do_deadline"
        android:padding="20dp" />

    <Button
        android:id="@+id/btn_Save"
        android:layout_width="150dp"
        android:layout_height="70dp"
        android:layout_marginRight="20dp"
        android:layout_gravity="end"
        android:text="@string/save"
        android:backgroundTint="@color/pushti"/>

</LinearLayout>